{
  "compilerOptions": {
    "target": "ES2020",                     
    "module": "ESNext",                     
    "moduleResolution": "Node",             
    "strict": true,                         
    "strictNullChecks": true,               
    "esModuleInterop": true,                
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                    
    "outDir": "dist",                       
    "allowJs": true,                         
    "resolveJsonModule": true,              
    "isolatedModules": true  
  },
  "include": ["packages/**/*"] 
}
